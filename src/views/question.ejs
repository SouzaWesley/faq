<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head") %> 
<body>
    <div class="container mt-5">
        <div class="buttons d-flex justify-content-between my-3" id="navbar">              
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb align-middle">
                    <li class="breadcrumb-item "><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Answer</li>
                </ol>
            </nav>
            <a href="/" class="btn btn-primary">Go back to home</a>
        </div>
        <div class="card">
            <div class="card-header">
                <h4><%= question.title %></h4>
            </div>
            <div class="card-body">
                <h6 class="mb-0"><%= question.description %></h6>
            </div>
            <div class="card-footer">
                <form action="/answer" method="POST">
                    <div class="form-group">
                        <label for="description" class="mb-3">Type below your answer:</label>
                        <textarea name="description" id="description" cols="30" rows="5" class="form-control"></textarea>
                    </div>
                    <div class="form-group my-3">
                        <input type="hidden" name="idquestion" value="<%= question.id %>">
                        <button type="submit" class="btn btn-primary">Send answer</button>
                        <button type="reset" class="btn btn-outline-secondary">Clear</button>
                    </div>
                </form>
            </div>
        </div>

        <h4 class="mt-5">All answers</h4>
            <% answers.forEach(answer => { %>
                <div class="card mt-3 mb-5">
                    <div class="card-body">
                        <p class="mb-0"><%= answer.description %></p>
                    </div>
                </div>
            <% }); %>
    </div>

    <%- include("./partials/scripts") %> 
</body>
</html>